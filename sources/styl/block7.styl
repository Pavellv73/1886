.block7
  width 100%
  height 340px
  background-color #f7f7f7
  @media (min-width 768px)
    height 267px
  @media (min-width 1280px)
    height 326px

  .block7-content
    width 100%
    height auto
    box-sizing border-box
    padding-top 32px
    @media (min-width 768px)
      padding-top 48px
    @media (min-width 1280px)
      padding-top 48px


    .block7-head
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-content center
      flex-direction column

      h2
        margin-bottom 12px
        font-weight 24px
        @media (min-width 1280px)
          margin-bottom 21px

      hr
        width 96px
        height 2px
        border-radius 100px
        background-image linear-gradient(107deg, #d45a64 0%, #ffb099 100%)
        border none
        @media (min-width 768px)
          margin-bottom 10px
        @media (min-width 1280px)
          margin-bottom 20px

      p
        text-align center
        line-height 22px
        margin-bottom 8px
        br
          display none
        @media (min-width 768px)
          line-height 26px

        @media (min-width 1280px)
          br
            display block








    form
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      z-index 1
      margin-top 48px
      @media (min-width 768px)
        flex-direction row
      @media (min-width 1280px)
        width auto



      .border-block-input
        width 260px
        height 68px
        border 1px solid #333333
        background-color #ffffff
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        margin-bottom 16px
        @media (min-width 768px)
          margin-bottom 0
          border-right none
        @media (min-width 1280px)
          width 320px
          height 96px
          justify-content flex-end


        input
          width 234px
          height 44px
          border 1px solid #333333
          background-color #ffffff
          text-align center
          color #333333
          font-family "Nocturne-Serif-Italic"
          font-size 14px
          letter-spacing 0.18px
          @media (min-width 1280px)
            width 297px
            height 54px
            font-size 18px

      .border-block-buttom
        width auto
        @media (min-width 768px)
          width 260px
          height 68px
          border 1px solid #333333
          background-color #ffffff
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          border-left none
        @media (min-width 1280px)
          width 320px
          height 96px
          justify-content flex-start