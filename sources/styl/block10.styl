.block10
  width 100%
  height auto
  background-color #FFFFFF

  .block10-content
    width 100%
    height auto
    justify-content center
    align-items center
    flex-direction column
    padding-top 135px
    padding-bottom 41px

    .block10-head
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      margin-bottom 24px
      @media (min-width 768px)
        margin-bottom 46px

      span
        color #de6f71
        font-family "Nocturne-Serif-Italic"
        font-size 20px
        font-weight 600
        position relative
        margin-bottom 16px
        @media (min-width 768px)
          font-size 24px
          margin-bottom 32px
        &:before
          content ""
          width 32px
          height 2px
          border-radius 100px
          background-image linear-gradient(197deg, #d45a64 0%, #ffb099 100%)
          position absolute
          top 11px
          left -41px

        &:after
          content ""
          width 32px
          height 2px
          border-radius 100px
          background-image linear-gradient(197deg, #d45a64 0%, #ffb099 100%)
          position absolute
          top 11px
          right -41px

      h2
        margin-bottom 12px
        @media (min-width 768px)
          margin-bottom 20px

    .reviews-slider
      width 100%
      height auto

      .slick-prev2, .slick-next2
        display none!important



      .slick-slider
        width 100%
        height 400px
        overflow hidden
        @media (min-width 768px)
          max-width 685px
          height 273px
        @media (min-width 1280px)
          max-width 100%
          height 440px
          position relative


        .slick-slide
          width 100%
          height auto
          @media (min-width 768px)
            max-width 685px
            height 237px
          @media (min-width 1280px)
            max-width 100%
            height 440px
            display flex
            display -webkit-flex
            justify-content center
            align-items center
            flex-direction row

          .reviews-img
            display none
            @media (min-width 1280px)
              display block
              margin-right 64px
              width 400px
              height 440px
              overflow hidden

            img
              width auto

          .reviews-text
            width 100%
            height auto
            @media (min-width 1280px)
              width auto
              max-width 683px

            p
              line-height 22px
              margin-bottom 7px
              @media (min-width 768px)
                margin-bottom 24px
                line-height 26px


            .name-reviews
              width 100%
              height auto
              display flex
              display -webkit-flex
              justify-content space-between
              align-items center
              flex-direction row

              a
                color #d8898b
                font-family Gilroy
                font-style italic
                font-size 16px
                font-weight 500
                text-align left
                @media (min-width 768px)
                  font-size 20px


              p
                color #333333
                font-family "Nocturne-Serif-Bolditalic"
                font-size 16px
                font-weight 500
                letter-spacing 0.16px
                margin-bottom 0
                @media (min-width 768px)
                  font-size 20px

      .dots
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction row
        padding-top 22px
        padding-bottom 12px
        box-sizing border-box
        @media (min-width 768px)
          padding-top 20px
          padding-bottom 20px
        @media (min-width 1280px)
          position absolute
          bottom 0
          left 18%

        li
          width 10px
          height 10px
          border 1px solid #ef9186
          border-radius 100%
          transition all 0.2s ease
          margin 0 5px
          @media (min-width 768px)
            width 16px
            height 16px
            margin 0 10px

          button
            display none

        li.slick-active
          background-color #ef9186
