.block5
  width 100%
  height auto
  background-color #FFFFFF

  .block5-content
    width 100%
    height auto
    justify-content center
    align-items center
    flex-direction column
    padding-top 32px
    padding-bottom 30px
    @media (min-width 768px)
      padding-top 64px
    @media (min-width 1280px)
      padding-top 112px

    .block5-head
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-content center
      flex-direction column
      margin-bottom 43px

      span
        color #de6f71
        font-family "Nocturne-Serif-Italic"
        font-size 20px
        font-weight 600
        position relative
        margin 0 auto
        @media (min-width 768px)
          font-size 24px
        &:before
          content ""
          width 32px
          height 2px
          border-radius 100px
          background-image linear-gradient(197deg, #d45a64 0%, #ffb099 100%)
          position absolute
          top 11px
          left -41px

        &:after
          content ""
          width 32px
          height 2px
          border-radius 100px
          background-image linear-gradient(197deg, #d45a64 0%, #ffb099 100%)
          position absolute
          top 11px
          right -41px

      h2
        margin-top 16px
        margin-bottom 12px
        @media (min-width 768px)
          margin-bottom 20px
          margin-top 32px




    .carousel
      width 100%
      height 290px
      @media (min-width 768px)
        height 350px

      .carousel-item
        height 290px
        width 250px
        @media (min-width 768px)
          width 290px
        @media (min-width 1280px)
          width 420px

        img
          margin-bottom 30px

        span
          display none
          color #de6f71
          font-family "Nocturne-Serif-Mediumitalic"
          font-size 20px
          font-weight 500
          text-align center
          margin-bottom 10px
          @media (min-width 768px)
            font-size 28px

        p
          display none
          color #333333
          font-family Gilroy
          font-size 14px
          font-weight 400
          text-align center
          @media (min-width 768px)
            font-size 20px

      .carousel-item.active
        span
          display block

        p
          display block


