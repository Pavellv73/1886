.block1
  width 100%
  height auto
  background-image url("img/block-1-bg.png")
  background-position 50% 36%
  background-repeat no-repeat
  background-size 162%
  padding-top 58px
  box-sizing border-box
  background-color #f7f7f7

  @media (min-width 768px)
    background-size 675px 403px
    background-position center left
  @media (min-width 1280px)
    background-size 100%
    overflow hidden


  .block1-content
    width 100%
    height auto
    justify-content center
    align-items center
    flex-direction column
    position relative
    padding-top 32px
    @media (min-width 768px)
      padding-top 100px
      align-items flex-end
    @media (min-width 1280px)
      padding-top 0
      height 640px




    .bg-color
      position absolute
      width 100%
      left -20px
      top 0
      height 315px
      background-color rgba(255, 255, 255, 0.6)
      z-index 0
      @media (min-width 768px)
        height 400px
        left -66px
        background: -moz-linear-gradient(left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.7) 26%, rgba(255,255,255,1) 100%); /* FF3.6-15 */
        background: -webkit-linear-gradient(left, rgba(255,255,255,0) 0%,rgba(255,255,255,0.7) 26%,rgba(255,255,255,1) 100%); /* Chrome10-25,Safari5.1-6 */
        background: linear-gradient(to right, rgba(255,255,255,0) 0%,rgba(255,255,255,0.7) 26%,rgba(255,255,255,1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
      @media (min-width 1280px)
        width 100%
        height 670px
        right 0
        left 48px
        background: -moz-linear-gradient(left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.1) 26%, rgba(255,255,255,1) 100%); /* FF3.6-15 */
        background: -webkit-linear-gradient(left, rgba(255,255,255,0) 0%,rgba(255,255,255,0.1) 26%,rgba(255,255,255,1) 100%); /* Chrome10-25,Safari5.1-6 */
        background: linear-gradient(to right, rgba(255,255,255,0) 0%,rgba(255,255,255,0.1) 26%,rgba(255,255,255,1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
      @media (min-width 1370px)
        left 30%



    .block1-head
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      z-index 1
      @media (min-width 768px)
        width 410px
      @media (min-width 1280px)
        width 641px
        align-items flex-start



      h1
        @media (min-width 768px)
          margin-bottom 24px
        @media (min-width 1280px)
          margin-bottom 40px
        br
          display none

      p
        text-align center
        margin-bottom 4px
        @media (min-width 768px)
          text-align left
          margin-bottom 8px
        @media (min-width 1280px)
          max-width 579px

    form
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      z-index 1
      margin-top 28px
      @media (min-width 768px)
        margin-top 70px
        flex-direction row
      @media (min-width 1280px)
        width auto



      .border-block-input
        width 260px
        height 68px
        border 1px solid #333333
        background-color #ffffff
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        margin-bottom 16px
        @media (min-width 768px)
          margin-bottom 0
          border-right none
        @media (min-width 1280px)
          width 320px
          height 96px
          justify-content flex-end


        input
          width 234px
          height 44px
          border 1px solid #333333
          background-color #ffffff
          text-align center
          color #333333
          font-family "Nocturne-Serif-Italic"
          font-size 14px
          letter-spacing 0.18px
          @media (min-width 1280px)
            width 297px
            height 54px
            font-size 18px

      .border-block-buttom
        width auto
        @media (min-width 768px)
          width 260px
          height 68px
          border 1px solid #333333
          background-color #ffffff
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          border-left none
        @media (min-width 1280px)
          width 320px
          height 96px
          justify-content flex-start




