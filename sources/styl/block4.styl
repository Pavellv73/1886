.block4
  width 100%
  height auto
  background-image url("img/block-4-bg.png")
  background-color #f7f7f7
  background-position left top
  background-size auto 35%
  background-repeat no-repeat
  @media (min-width 744px)
    background-size auto 35%
  @media (min-width 920px)
    background-size 100% 40%
  @media (min-width 1280px)
    background-size 100% 40%

  .block4-content
    width 100%
    height auto
    padding-top 32px
    @media (min-width 768px)
      padding-top 64px
    @media (min-width 1280px)
      padding-top 80px
      padding-bottom 110px

    .block4-head
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column

      h2
        color #FFFFFF
        line-height 26px
        font-family "Nocturne-Serif-Medium"
        font-weight 500
        margin-bottom 16px
        @media (min-width 768px)
          margin-bottom 24px
        @media (min-width 1280px)
          font-size 40px

      p
        color #FFFFFF
        text-align center
        @media (min-width 768px)
          max-width 582px
        @media (min-width 1280px)
          max-width 906px
          line-height 24px

    form
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      z-index 1
      margin-top 28px
      margin-bottom 28px
      @media (min-width 768px)
        margin-top 38px
        flex-direction row
      @media (min-width 1280px)
        margin-top 68px
        margin-bottom 72px
        width auto

      .border-block-input
        width 260px
        height 68px
        border 1px solid #333333
        background-color #ffffff
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        margin-bottom 16px
        @media (min-width 768px)
          margin-bottom 0
          border-right none
        @media (min-width 1280px)
          width 320px
          height 96px
          justify-content flex-end

        input
          width 234px
          height 44px
          border 1px solid #333333
          background-color #ffffff
          text-align center
          color #333333
          font-family "Nocturne-Serif-Italic"
          font-size 14px
          letter-spacing 0.18px
          @media (min-width 1280px)
            width 297px
            height 54px
            font-size 18px

      .border-block-buttom
        width auto
        @media (min-width 768px)
          width 260px
          height 68px
          border 1px solid #333333
          background-color #ffffff
          display flex
          display -webkit-flex
          justify-content center
          align-items center
          border-left none
        @media (min-width 1280px)
          width 320px
          height 96px
          justify-content flex-start

    .help-block
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      @media (min-width 1280px)
        flex-direction row
        justify-content space-between

      .spec-help, .team-help
        width 100%
        height auto
        margin-bottom 32px
        display flex
        display -webkit-flex
        justify-content flex-start
        align-items flex-start
        flex-direction column
        align-content flex-start
        @media (min-width 768px)
          margin-bottom 40px
        @media (min-width 1280px)
          width 46%
          margin-bottom 0

        h2
          text-align left
          margin-bottom 12px


        hr
          width 96px
          height 2px
          border-radius 100px
          border none
          margin-bottom 12px
          margin-left 0
          background-image linear-gradient(107deg, #d45a64 0%, #ffb099 100%)

        p
          line-height 22px
          @media (min-width 768px)
            line-height 26px
          @media (min-width 1280px)
            line-height 30px