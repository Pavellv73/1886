.block3
  width 100%
  height auto
  background-color #f7f7f7

  .block3-content
    width 100%
    height auto
    justify-content center
    align-items center
    flex-direction column
    padding-top 40px
    padding-bottom 30px
    @media (min-width 768px)
      padding-top 64px
    @media (min-width 1280px)
      padding-top 112px

    .block3-head
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column

      span
        color #de6f71
        font-family "Nocturne-Serif-Italic"
        font-size 20px
        font-weight 600
        position relative
        margin-bottom 16px
        @media (min-width 768px)
          font-size 24px
          margin-bottom 32px
        &:before
          content ""
          width 32px
          height 2px
          border-radius 100px
          background-image linear-gradient(197deg, #d45a64 0%, #ffb099 100%)
          position absolute
          top 11px
          left -41px

        &:after
          content ""
          width 32px
          height 2px
          border-radius 100px
          background-image linear-gradient(197deg, #d45a64 0%, #ffb099 100%)
          position absolute
          top 11px
          right -41px

      h2
        margin-bottom 12px
        @media (min-width 768px)
          margin-bottom 20px

      p
        text-align center
        margin-bottom 40px
        @media (min-width 768px)
          margin-bottom 66px
          max-width 635px
          line-height 22px
        @media (min-width 1280px)
          line-height 30px
          max-width 732px
          margin-bottom 72px


    .tabs-slider
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content space-around
      align-items center
      flex-direction row
      @media (min-width 768px)
        justify-content center

      .slider-one, .slider-two
        height 40px
        margin-bottom 24px
        cursor pointer
        opacity 0.5
        transition all 0.1s ease
        @media (min-width 768px)
          margin-bottom 38px
          margin-left 23px
          margin-right 23px
          height 50px
        @media (min-width 1280px)
          height 55px
        &:hover
          opacity 1.0

        img
          width auto
          height auto
          max-height 40px
          @media (min-width 768px)
            max-height 50px
          @media (min-width 1280px)
            max-height 55px

      .tab-active
        opacity 1



    .video-slider-block
      width 100%
      height auto
      position relative
      display none
      justify-content center
      align-items center



      .slick-prev, .slick-next
        display none!important
        position absolute
        top 0

        @media (min-width 768px)
          display block!important
          top 45%
          &:before
            display none
          &:after
            display none

      .slick-prev
        width 27px
        height 54px
        background-image url("img/prew.png")
        background-size 100%
        background-repeat no-repeat
        background-position center
        left 0

      .slick-next
        width 27px
        height 54px
        background-image url("img/next.png")
        background-size 100%
        background-repeat no-repeat
        background-position center
        right 0


      .slick-slider
        width 100%
        height 200px
        overflow hidden
        @media (min-width 768px)
          max-width 580px
          height 360px
        @media (min-width 1280px)
          max-width 783px
          height 480px


        .slick-slide
          width 100%
          height 151px
          @media (min-width 768px)
            max-width 580px
            height 311px
          @media (min-width 1280px)
            max-width 783px
            height 420px

          iframe
            width 100%
            height 100%


      .dots
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction row
        padding-top 12px
        padding-bottom 12px
        box-sizing border-box
        @media (min-width 768px)
          padding-top 20px
          padding-bottom 20px

        li
          width 10px
          height 10px
          border 1px solid #ef9186
          border-radius 100%
          transition all 0.2s ease
          margin 0 5px

          button
            display none

        li.slick-active
          background-color #ef9186




    .video-active
      display flex


