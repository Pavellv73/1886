footer
  width 100%
  height auto
  background-color #f7f7f7

  .footer-content
    width 100%
    height auto
    padding 20px 0
    display flex
    display -webkit-flex
    justify-content center
    align-items center
    flex-direction column
    @media (min-width 768px)
      flex-direction row
      justify-content space-between
      padding-top 12px
      padding-bottom 12px

    .ogrn
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content space-between
      align-items center
      flex-direction row
      margin-bottom 20px
      @media (min-width 768px)
        margin-bottom 0
      @media (min-width 1280px)
        justify-content space-around
        width 25%

      .group, .inn
        width 50%
        height auto

        p
          color #959595
          font-family Gilroy
          font-size 12px
          font-weight 500
          letter-spacing 0.12px
          text-align center
          @media (min-width 1280px)
            text-align left
            font-size 14px

