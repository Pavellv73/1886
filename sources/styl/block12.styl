.block12
  width 100%
  height auto
  background-color #FFFFFF

  .block12-content
    width 100%
    height auto
    justify-content center
    align-items center
    flex-direction column
    padding-top 36px
    @media (min-width 768px)
      padding-top 48px
    @media (min-width 1280px)
      padding-top 80px


    .delivery, .pay
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      border-top 1px solid #000000
      padding-top 12px
      margin-bottom 15px
      @media (min-width 768px)
        flex-direction row
        padding-top 18px
        justify-content space-between
      @media (min-width 1280px)
        padding-top 24px
        margin-bottom 63px

      h2
        margin-bottom 24px
        font-size 24px
        @media (min-width 1280px)
          font-size 32px

      p
        text-align center
        margin-bottom 16px
        font-size 14px
        br
          display none
        @media (min-width 768px)
          text-align left
          br
            display block
        @media (min-width 1280px)
          font-size 20px


    .pay-icon-block
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-flow row wrap
      @media (min-width 768px)
        margin-top 25px

      img
        margin-right 25px
        margin-left 25px
        margin-bottom 24px
        @media (min-width 768px)
          margin-left 30px
          margin-right 30px
        @media (min-width 1280px)
          margin-left 35px
          margin-right 35px



