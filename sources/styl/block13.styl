.block13
  width 100%
  height auto


  .block13-content
    width 100%
    height auto
    padding-top 25px
    @media (min-width 768px)
      padding-top 52px

    .block13-head
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      @media (min-width 768px)
        margin-bottom 38px
      @media (min-width 1280px)
        margin-bottom 35px

      span
        color #de6f71
        font-family "Nocturne-Serif-Italic"
        font-size 20px
        font-weight 600
        position relative
        margin-bottom 16px
        @media (min-width 768px)
          font-size 24px
          margin-bottom 32px
        &:before
          content ""
          width 32px
          height 2px
          border-radius 100px
          background-image linear-gradient(197deg, #d45a64 0%, #ffb099 100%)
          position absolute
          top 11px
          left -41px

        &:after
          content ""
          width 32px
          height 2px
          border-radius 100px
          background-image linear-gradient(197deg, #d45a64 0%, #ffb099 100%)
          position absolute
          top 11px
          right -41px

      h2
        margin-bottom 32px
        @media (min-width 768px)
          margin-bottom 20px
        @media (min-width 1280px)
          margin-bottom 0

      p
        text-align center
        margin-bottom 40px
        @media (min-width 768px)
          margin-bottom 66px
          max-width 635px
          line-height 22px
        @media (min-width 1280px)
          line-height 30px
          max-width 732px
          margin-bottom 72px


    .map-block
      width 100%
      height auto

      p
        font-size 14px
        font-weight 400
        letter-spacing 0.14px
        margin-bottom 12px
        padding 0 19px
        box-sizing border-box
        @media (min-width 768px)
          margin-bottom 0
          font-size 20px
          padding 0 83px


      .contact-map
        width 100%
        height 338px
        display flex
        display -webkit-flex
        justify-content flex-end
        align-items center
        flex-direction column
        background-color #f7f7f7
        margin-top 128px
        @media (min-width 768px)
          margin-top 141px
          height 307px
        @media (min-width 1280px)
          flex-direction row
          height 170px
          margin-top 86px


        .map
          width 100%
          height 282px
          margin-bottom 24px
          padding 0 19px
          box-sizing border-box
          @media (min-width 768px)
            height 270px
            padding 0 83px
            margin-bottom 32px
          @media (min-width 1280px)
            width 603px
            height 270px
            margin-right 48px

          iframe
            width 100%
            height 282px
            @media (min-width 1280px)
              width 603px
              height 270px

        .contacts
          width 100%
          height auto
          padding 0 19px
          box-sizing border-box
          @media (min-width 768px)
            padding 0 83px

          span
            color #333333
            font-family Gilroy
            font-size 14px
            font-weight 400
            margin-bottom 4px
            @media (min-width 768px)
              font-size 18px

          p
            font-size 17px
            font-weight 500
            text-align left
            @media (min-width 768px)
              font-size 20px
              padding 0
              margin-bottom 16px


    .adres-blocks
      width 100%
      height auto


      .adres-content
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        border-top 1px solid #000000
        border-bottom 1px solid #000000
        margin-top 30px
        padding-top 24px
        box-sizing border-box
        @media (min-width 768px)
          flex-flow row wrap
          justify-content space-around
        @media (min-width 1280px)
          margin-top 110px

        .adres-block
          width 178px
          height auto
          margin-bottom 24px

          span
            color #333333
            font-family Gilroy
            font-size 18px
            font-weight 400
            letter-spacing 0.18px

          p
            font-size 20px
            font-weight 500
            font-family "Nocturne-Serif-Medium"



    .soc-block
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column
      padding-top 32px
      @media (min-width 768px)
        padding-top 48px
      @media (min-width 1280px)
        padding-top 56px

      img
        margin-bottom 24px
        @media (min-width 1280px)
          width 57px
          height 48px

      a
        color #333333
        font-family "Nocturne-Serif-Medium"
        font-size 20px
        font-weight 500
        letter-spacing 0.31px
        text-align center
        margin-bottom 12px
        @media (min-width 768px)
          font-size 24px

      .soc-icon-block
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction row
        padding-top 15px

        a
          margin 0 17px
          @media (min-width 768px)
            margin 0 7px

          img
            width auto
            height auto
